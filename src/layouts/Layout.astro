---
import Header from "../components/Header.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="preconnect" href="https://fonts.googleapis.com" /><link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    /><link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;500;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Joshua Grant's portfolio." />
    <title>{title}</title>
  </head>
  <body class="bg-dark-blue text-white font-open-sans">
    <header class="p-6 fixed w-full bg-blue-green-60 backdrop-blur-sm">
      <nav class="gap-8 flex justify-end w-full">
        <a
          class="hover:underline font-bold hover:text-blue-green text-xl"
          href="#about">About</a
        >
        <a
          class="hover:underline font-bold hover:text-blue-green text-xl"
          href="#projects">Projects</a
        >
        <a
          class="hover:underline font-bold hover:text-blue-green text-xl"
          href="#contact">Contact</a
        >
      </nav>
    </header>
    <slot />
    <footer class="p-8">
      <p class="text-center">&#169; {new Date().getFullYear()} Joshua Grant</p>
    </footer>
  </body>
</html>
