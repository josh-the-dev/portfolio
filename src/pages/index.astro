---
import Layout from "../layouts/Layout.astro";
import tempcoverLogo from "../assets/images/logos/tempcover.jpg";
import avmiLogo from "../assets/images/logos/avmi.jpg";
import novemberFiveLogo from "../assets/images/logos/novemberfive.jpg";
import civicaLogo from "../assets/images/logos/civica.jpg";
---

<Layout title="Joshua Grant">
  <main class="py-4 px-3 md:p-8">
    <!-- Intro secion -->
    <section id="intro">
      <h4 class="text-white text-xl font-open-sans">
        Hey there I'm Josh &#128075;
      </h4>
    </section>
    <!-- About me -->
    <section id="about">
      <h4 class="text-white text-xl font-open-sans">About me</h4>
      <h5 class="text-white text-lg font-open-sans">My skills</h5>
    </section>
    <!-- Work experience -->
    <section id="work">
      <h4 class="text-white text-xl font-open-sans">
        Companies I'm proud to say that I've collaborated with:
      </h4>
      <div class="justify-center grid grid-cols-2 md:grid-cols-4 gap-3">
        <div><img src={tempcoverLogo} width="150" alt="Tempcover logo" /></div>
        <div>
          <img src={novemberFiveLogo} width="150" alt="November Five logo" />
        </div>
        <div>
          <img src={avmiLogo} width="150" alt="AVMI logo" />
        </div>
        <div>
          <img src={civicaLogo} width="150" alt="Civica logo" />
        </div>
      </div>
    </section>
    <!-- Projects -->
    <section id="portfolio">
      <h4 class="text-white text-xl font-open-sans">
        Here's some things I've worked on
      </h4>
    </section>
    <!-- Contact form -->
    <section id="contact">
      <h4 class="text-white text-xl font-open-sans">Contact</h4>
      <div>
        <p>Feel free to reach out to me through any platform below:</p>
        <ul>
          <li>
            <a
              href="mailto:grantjoshua1995@gmail.com"
              class="text-white hover:font-bold">grantjoshua@gmail.com</a
            >
            <li>
              <a
                href="https://www.linkedin.com/in/joshua-h-grant/"
                target="_blank"
                class="text-white hover:font-bold">LinkedIn</a
              >
            </li>
            <li>
              <a
                href="https://twitter.com/_JoshGrant_"
                target="_blank"
                class="text-white hover:font-bold">Twitter</a
              >
            </li>
          </li>
        </ul>
      </div>
    </section>
  </main>
</Layout>
